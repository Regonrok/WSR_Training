<Window x:Class="Wsr_forms.TemperamentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wsr_forms"
        mc:Ignorable="d"
        Title="TemperamentForm" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="state1" Content="Никогда" Margin="5"  Background="White" Click="Button_Click"/>
        <Button x:Name="state2" Content="Иногда" Margin="5" Grid.Row="1" Background="Green" Click="Button_Click"/>
        <Button x:Name="state3" Content="Часто" Margin="5" Grid.Row="2" Background="Yellow" Click="Button_Click"/>
        <Button x:Name="state4" Content="Всегда" Margin="5" Grid.Row="3" Background="Red" Click="Button_Click"/>
        <Button x:Name="state5" Content="Назад" Margin="5" Grid.Row="4" Click="Button_Click"/>

    </Grid>
</Window>
